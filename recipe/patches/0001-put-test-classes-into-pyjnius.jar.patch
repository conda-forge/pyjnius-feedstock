From: "H. Vetinari" <h.vetinari@gmx.com>
Date: Sun, 21 Nov 2021 21:55:09 +1100
Subject: [PATCH] put test-classes into pyjnius.jar

---
 build.xml | 8 ++++----
 1 file changed, 4 insertions(+), 4 deletions(-)

diff --git a/build.xml b/build.xml
index 723783d..b0ff8c3 100644
--- a/build.xml
+++ b/build.xml
@@ -15,16 +15,16 @@
     </target>
 
     <target name="test-compile">
-        <mkdir dir="build/test-classes"/>
-        <javac srcdir="tests/java-src" destdir="build/test-classes"
+        <mkdir dir="build/classes"/>
+        <javac srcdir="tests/java-src" destdir="build/classes"
                includeantruntime='false'
                encoding="UTF-8"/>
     </target>
 
-    <target name="jar" depends="compile">
+    <target name="jar" depends="compile,test-compile">
         <jar destfile="build/pyjnius.jar" basedir="build/classes">
         </jar>
     </target>
 
-    <target name="all" depends="jar,test-compile"/>
+    <target name="all" depends="jar"/>
 </project>
